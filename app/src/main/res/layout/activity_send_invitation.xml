<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/invitation3"
    tools:context=".SendInvitationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Invitation"
        android:textSize="24sp"
        android:textColor="#4c3228"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invitee Email"
        android:textSize="18sp"
        android:textColor="#4c3228"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_gravity="start"/>

    <EditText
        android:id="@+id/edit_text_invitee_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#C8ABA8"
        android:gravity="start"
        android:layout_margin="16dp"
        android:background="@drawable/edit_text_border"
        android:hint="Enter Invitee Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_send_invitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Send Invitation"
        android:textSize="18sp"
        android:backgroundTint="#4c3228"
        android:textColor="@android:color/white"
        android:layout_gravity="center"/>

</LinearLayout>
