<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/invitation2"
    tools:context=".EventDetailsActivity">

    <!-- Event Name TextView -->
    <TextView
        android:id="@+id/text_event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <!-- Event Location TextView -->
    <TextView
        android:id="@+id/text_event_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <!-- Event Date TextView -->
    <TextView
        android:id="@+id/text_event_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <!-- Event Time TextView -->
    <TextView
        android:id="@+id/text_event_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <!-- Event Image (if any) -->
    <ImageView
        android:id="@+id/image_event"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/invitation3" />

    <!-- Edit Event Button -->
    <Button
        android:id="@+id/button_edit_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Edit Event"
        android:backgroundTint="#4c3228"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <!-- Delete Event Button -->
    <Button
        android:id="@+id/button_delete_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Delete Event"
        android:backgroundTint="#4c3228"
        android:textColor="@android:color/white"/>
</LinearLayout>
